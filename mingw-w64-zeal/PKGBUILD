# Maintainer: <matheus-catarino@hotmail.com>

_realname=zeal
pkgbase=mingw-w64-${_realname}
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver=0.6.1
pkgrel=1
pkgdesc="Offline documentation browser inspired by Dash"
arch=('any')
url="https://github.com/zealdocs/${_realname}"
license=("Boost Software License")
depends=("${MINGW_PACKAGE_PREFIX}-qt5")
makedepends=("${MINGW_PACKAGE_PREFIX}-gcc" "${MINGW_PACKAGE_PREFIX}-cmake"
              "${MINGW_PACKAGE_PREFIX}-libarchive" "${MINGW_PACKAGE_PREFIX}-qtwebkit")
source=("https://github.com/zealdocs/${_realname}/archive/v${pkgver}.tar.gz")
sha256sums=('095c08f9903071849d5c79878abd48237ce1615f16d324afff1873ab6b5f0026')

build() {
    cd ${srcdir}/${_realname}-${pkgver}
    cmake \
        -G"MSYS Makefiles" \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=${MINGW_PREFIX} \
        -DZEAL_PORTABLE_BUILD=OFF
    make
}

package() {
    cd ${srcdir}/${_realname}-${pkgver}
    make install DESTDIR="${pkgdir}" prefix="${MINGW_PREFIX}"
}

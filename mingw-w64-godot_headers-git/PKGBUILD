# Maintainer: Sarah Ottinger <schalaalexiazeal@gmail.com>

_realname=godot_headers-git
pkgbase=mingw-w64-${_realname}
pkgname=${MINGW_PACKAGE_PREFIX}-${_realname}
pkgver=r100.3440193
pkgrel=1
pkgdesc='Headers for the Godot API supplied by the GDNative module. (mingw-w64)'
arch=('any')
url="http://www.godotengine.org/"
license=('MIT')
makedepends=(git)
options=('!emptydirs' 'staticlibs' 'strip')
source=("${_realname}"::"git+https://github.com/godotengine/godot_headers.git")
sha256sums=('SKIP')

pkgver() {
  cd "${srcdir}"/${_realname}
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
  cd "${srcdir}"/${_realname}
  
  mkdir -p "${pkgdir}${MINGW_PREFIX}/include"
  find . -type f -name '*.h' -exec install -Dm644 {} "${pkgdir}${MINGW_PREFIX}/include"{} \;
  install -D -m644 LICENSE.md "${pkgdir}${MINGW_PREFIX}/share/licenses/godot_headers/LICENSE.md"
}

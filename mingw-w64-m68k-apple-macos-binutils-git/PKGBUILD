# Maintainer: Sarah Ottinger <schalaalexiazeal@gmail.com>

_realname=m68k-apple-macos-binutils
pkgbase=mingw-w64-${_realname}-git
pkgname=${MINGW_PACKAGE_PREFIX}-${_realname}
pkgver=r808.8d32c583ae
pkgrel=1
pkgdesc='cross-binutils for classic 68K Macintoshes (mingw-w64)'
arch=('any')
mingw_arch=('ming32' 'mingw64' 'ucrt64' 'clang64')
url="https://github.com/autc04/Retro68"
license=('GPL3')
depends=("${MINGW_PACKAGE_PREFIX}-isl")
makedepends=("${MINGW_PACKAGE_PREFIX}-libtool" autoconf automake git make bison flex)
_commit=8d32c583aee7051b9cd3a99d88d5defa39e868cf
source=("https://github.com/autc04/Retro68/archive/${_commit}.tar.gz")
sha256sums=('827123e3ecd37a132a41b6bf510c9eed1d41c016a0a987beb39096dc7a0ed185')

build() {
  mkdir -p "${srcdir}/build-${CHOST}" && cd "${srcdir}/build-${CHOST}"
  ../Retro68-${_commit}/binutils/configure \
	--build=${MINGW_CHOST} \
	--prefix=${MINGW_PREFIX} \
	--target=m68k-apple-macos \
	--disable-doc
  make ${MAKEFLAGS}
}

package() {
  cd "${srcdir}/build-${CHOST}"
  make DESTDIR="$pkgdir" install
  rm -rf "${pkgdir}${MINGW_PREFIX}/share/info"
  cd ../Retro68-${_commit}
  install -D -m644 COPYING "${pkgdir}${MINGW_PREFIX}/share/licenses/${_realname}/COPYING"
}
